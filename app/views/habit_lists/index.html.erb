<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

<p id="notice"><%= notice %></p>

<h1>Habit Lists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Personal habit</th>
      <th>Habit</th>
      <th>Habituation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habit_lists.each do |habit_list| %>
      <tr>
        <td><%= habit_list.user_id %></td>
        <td><%= habit_list.personal_habit_id %></td>
        <td><%= habit_list.habit %></td>
        <td><%= habit_list.habituation %></td>
        <td><%= link_to 'Show', habit_list %></td>
        <td><%= link_to 'Edit', edit_habit_list_path(habit_list) %></td>
        <td><%= link_to 'Destroy', habit_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Habit List', new_habit_list_path %>
</div>
</main>
